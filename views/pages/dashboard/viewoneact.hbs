<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">

        <title>OneUI - Bootstrap 4 Admin Template &amp; UI Framework</title>

       <!-- Icons -->
        <!-- The following icons can be replaced with your own, they are used by desktop and mobile browsers -->
        <link rel="shortcut icon" href="/assets/dashboard/media/favicons/favicon.png">
        <link rel="icon" type="image/png" sizes="192x192" href="/assets/dashboard/media/favicons/favicon-192x192.png">
        <link rel="apple-touch-icon" sizes="180x180" href="/assets/dashboard/media/favicons/apple-touch-icon-180x180.png">
        <!-- END Icons -->

        <!-- Stylesheets -->
        <!-- Page JS Plugins CSS -->
        <link rel="stylesheet" href="/assets/dashboard/js/plugins/datatables/dataTables.bootstrap4.css">
        <link rel="stylesheet" href="/assets/dashboard/js/plugins/datatables/buttons-bs4/buttons.bootstrap4.min.css">
        <link rel="stylesheet" href="/assets/dashboard/js/plugins/magnific-popup/magnific-popup.css">

        <!-- Fonts and OneUI framework -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400italic,600,700%7COpen+Sans:300,400,400italic,600,700">
        <link rel="stylesheet" id="css-main" href="/assets/dashboard/css/oneui.min.css">

        <!-- You can include a specific file from css/themes/ folder to alter the default color theme of the template. eg: -->
        <!-- <link rel="stylesheet" id="css-theme" href="/assets/dashboard/css/themes/amethyst.min.css"> -->
        <!-- END Stylesheets -->
    </head>
    <body>
        
        <div id="page-container" class="sidebar-o sidebar-dark enable-page-overlay side-scroll page-header-fixed">
             
             {{> dashnav two="active"}}

            <!-- Main Container -->
            <main id="main-container">
            {{#each items}}
                <!-- Hero -->
                <div class="bg-body-light">
                    <div class="content content-full">
                        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
                            <h1 class="flex-sm-fill h3 my-2">
                                View Activity in detail
                            </h1>
                            <nav class="flex-sm-00-auto ml-sm-3" aria-label="breadcrumb">
                                <ol class="breadcrumb breadcrumb-alt">
                                    <li class="breadcrumb-item">Dashboard</li>
                                    <li class="breadcrumb-item" aria-current="page">
                                        <a class="link-fx" href="/dashboard/activities">View Activities</a>
                                    </li>
                                    <li class="breadcrumb-item" aria-current="page">
                                        <a class="link-fx" href="">{{this._id}}</a>
                                    </li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
                <!-- END Hero -->

                <!-- Page Content -->
                <div class="content">

                    <!-- Interactive Options -->
                    <div class="row">

                    <!-- Bootstrap Buttons in Options -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="block">
                                <div class="block-header">
                                    <h2 class="block-title">{{this.title}} </h2>
                                    {{#if ../authdata.passport.user.permission}}
                                    <div class="block-options">

                                        <form action="/dashboard/activities" method="post">
                                        <button type="button" class="btn btn-sm btn-primary">Edit</button>
                                            <input type="text" id="actid" name="actid" value="{{this._id}}" hidden/>
                                            <button type="submit" class="btn btn-sm btn-danger" data-toggle="tooltip" title="Remove Data" onclick='return checkDelete()'>
                                                Delete
                                            </button>
                                        </form>
                                    </div>
                                    {{/if}}
                                </div>
                                <div class="block-content">
                                    <p><b>Date: </b>{{this.date}}</p>
                                    <p><b>Description: </b>{{this.detail}}</p>
                                    <p><b>Activity Type: </b>{{this.type}}</p>
                                    <p><img class='image_fade' src='/assets/images/activities/{{this.type}}.png' alt='{{this.type}} Logo' style='height:50px; width:50px;border-radius:50%;'></p>
                                    <p><b>Images: </b>
                                        {{#if imageyes}}
                                        {{this.images}}
                                        {{else}}
                                        No
                                        {{/if}}
                                    </p>
                                </div>
                            </div>
                        </div>
                            <div class="col">
                            <div class="row items-push js-gallery img-fluid-100">
                            {{#each image}}
                                <div class="col-md-6 col-lg-4 col-xl-6 animated fadeIn">
                                    <a class="img-link img-link-zoom-in img-thumb img-lightbox" href="/assets/images/activities/{{../this.year}}/{{this}}.jpg">
                                        <img class="img-fluid" src="/assets/images/activities/{{../this.year}}/{{this}}.jpg" alt="">
                                    </a>
                                </div>
                            {{/each}}
                            </div>
                            </div>
            {{/each}}

        {{>dashfooter status="hidden"}}

        <script src="/assets/dashboard/js/plugins/magnific-popup/jquery.magnific-popup.min.js"></script>
        <!-- Page JS Helpers (Magnific Popup Plugin) -->
        <script>jQuery(function(){ One.helpers('magnific-popup'); });</script>

    </body>
</html>
